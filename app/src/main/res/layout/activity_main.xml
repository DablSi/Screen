<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/ll" android:orientation="vertical" android:layout_height="match_parent"
                android:theme="@style/Theme.ScreenTheme"
                android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/start"
            style="@style/Widget.AppCompat.Button.Colored"
            android:id="@+id/start"
            android:layout_centerInParent="true"/>

    <fragment android:id="@+id/panel" android:layout_height="wrap_content" android:layout_width="match_parent"
              android:layout_alignParentBottom="true" android:name="com.example.ducks.screen.Panel"/>

    <TextView android:id="@+id/textView1" android:layout_height="wrap_content" android:layout_width="wrap_content"
              android:layout_above="@id/start"
              android:layout_centerHorizontal="true" android:textSize="20sp"/>

</RelativeLayout>