<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".Panel"
                android:background="@color/colorAccent">

    <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:src="@drawable/baseline_add_circle_white_24dp" android:id="@+id/first"
                 android:paddingRight="48dp"
                 android:paddingLeft="48dp"
                 android:paddingTop="16dp"
                 android:paddingBottom="16dp"
                 android:background="@null" android:layout_alignParentStart="true"
                 android:layout_alignParentTop="true" android:layout_alignParentLeft="true"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Создать" android:layout_alignParentStart="true" android:layout_alignBottom="@+id/first"
              android:layout_alignParentLeft="true"
              android:layout_marginLeft="33dp"
              android:id="@+id/add"
              android:visibility="invisible"
              android:textColor="#ffffff"/>

    <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:src="@drawable/baseline_search_white_24dp" android:id="@+id/second"
                 android:layout_alignParentTop="true"
                 android:layout_alignParentRight="true" android:paddingRight="48dp"
                 android:paddingLeft="48dp"
                 android:paddingTop="16dp"
                 android:paddingBottom="16dp"
                 android:background="@null" android:layout_alignParentEnd="true"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Найти"
              android:textColor="#ffffff"
              android:layout_alignParentEnd="true"
              android:layout_marginEnd="33dp" android:layout_alignParentRight="true" android:layout_marginRight="33dp"
              android:paddingRight="5dp"
              android:id="@+id/search"
              android:layout_alignBottom="@+id/second"
              android:visibility="invisible"/>

    <!--<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:src="@drawable/baseline_settings_white_24dp" android:id="@+id/third"
                 android:layout_alignParentTop="true"
                 android:layout_alignParentRight="true" android:paddingRight="48dp"
                 android:paddingLeft="48dp"
                 android:paddingTop="16dp"
                 android:paddingBottom="16dp"
                 android:background="@null"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Settings"
              android:textColor="#ffffff"
              android:layout_alignBottom="@+id/third"
              android:layout_alignParentEnd="true"
              android:layout_marginEnd="33dp" android:layout_alignParentRight="true" android:layout_marginRight="33dp"
              android:id="@+id/set"
              android:visibility="invisible"/>-->

</RelativeLayout>